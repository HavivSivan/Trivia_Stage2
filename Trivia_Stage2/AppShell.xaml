<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Trivia_Stage2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Trivia_Stage2"
    xmlns:views="clr-namespace:Trivia_Stage2.Views">
    
    <FlyoutItem
        Title="Menu"
        FlyoutDisplayOptions="AsMultipleItems">
        <Tab Title="Login Page"
            >
            <ShellContent
            ContentTemplate="{DataTemplate views:LoginPage}"/>
        </Tab>
        <Tab
            Title="Menu Page"
            >
            <ShellContent
            ContentTemplate="{DataTemplate views:MenuPage}"/>
        </Tab>
        <Tab Title="Approve Quesitons"
            >
            <ShellContent ContentTemplate="{DataTemplate views:ApproveQuestionsPage}" />
        </Tab>
        <Tab Title="Best Scores"
            >
            <ShellContent ContentTemplate="{DataTemplate views:BestScoresPage}" />
        </Tab>
        <Tab Title="User Admin"
            >
            <ShellContent ContentTemplate="{DataTemplate views:UserAdminPage}" />
        </Tab>
        <Tab Title="User Questions"
            >
            <ShellContent ContentTemplate="{DataTemplate views:UserQuestionsPage}" />
        </Tab>
    </FlyoutItem>

</Shell>
