<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Trivia_Stage2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Trivia_Stage2"
    xmlns:views="clr-namespace:Trivia_Stage2.Views"
    FlyoutBehavior="Flyout">
 
        
        <ShellContent 
                Title="Login Page"
                IsEnabled="False"
                FlyoutItemIsVisible="False"
                ContentTemplate="{DataTemplate views:LoginPage}"/>
        
        <ShellContent Title="Approve Quesitons" ContentTemplate="{DataTemplate views:ApproveQuestionsPage}" />
        
        <ShellContent Title="Best Scores" ContentTemplate="{DataTemplate views:BestScoresPage}" />
        
        <ShellContent Title="User Admin" ContentTemplate="{DataTemplate views:UserAdminPage}" />
        
        <ShellContent Title="User Questions" ContentTemplate="{DataTemplate views:UserQuestionsPage}" />


</Shell>
