<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trivia_Stage2.Views.BestScoresPage"
             xmlns:viewModel="clr-namespace:Trivia_Stage2.ViewModels"
             xmlns:Model="clr-namespace:Trivia_Stage2.Models"
             x:DataType="viewModel:BestScoresPageViewModel"
             
             Title="BestScoresPage">
    <ScrollView Margin="10">
        <HorizontalStackLayout>
            <Button Text="Refresh" Command="{Binding Reload}"/>
            <Entry Text="{Binding SearchBar}"/>
            <Button Text="Search" Command="{Binding Search}"/>
            <CollectionView ItemsSource="{Binding players}" SelectedItem="{Binding SelectedPlayer}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <!--<Label Text="{Binding PlayerName}" />
                            <Label Text="{Binding Points}" />-->
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
			<StackLayout>
				<Label Text="Selected Player Details" FontAttributes="Bold" />
				<Label Text="{Binding SelectedPlayer.Rank}" />
				<Label Text="{Binding SelectedPlayer.PlayerId}" />
			</StackLayout>
        </HorizontalStackLayout>
    </ScrollView>
</ContentPage>