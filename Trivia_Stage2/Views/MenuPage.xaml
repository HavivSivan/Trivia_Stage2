<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trivia_Stage2.Views.MenuPage"
             xmlns:viewModel="clr-namespace:Trivia_Stage2.ViewModels"
             xmlns:Model="clr-namespace:Trivia_Stage1.Models"
             x:DataType="viewModel:MenuPageViewModel"
             Title="NewPage1">
    <VerticalStackLayout>
        <Button
            Margin="6"
            Text="Approve Questions Page"
            Command="{Binding NavigateToApproveQuestionsPageCommand}"
            />
        <Button
            Margin="6"
            Text="Best Scores Page"
            Command="{Binding NavigateToBestScoresPageCommand}"
        />
        <Button
            Margin="6"
            Text="User Admin Page"
            Command="{Binding NavigateToUserAdminPageCommand}"
        />
        <Button
            Margin="6"
            Text="User Questions Page"
            Command="{Binding NavigateToUserQuestionsPageCommand}"
        />
    </VerticalStackLayout>
</ContentPage>