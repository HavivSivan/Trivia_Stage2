<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Trivia_Stage2.Views.UserQuestionsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Model="clr-namespace:Trivia_Stage2.Models"
    xmlns:viewModel="clr-namespace:Trivia_Stage2.ViewModels"
    Title="User Questions Page"
    x:DataType="viewModel:UserQuestionsPageViewModel">
    <Grid ColumnDefinitions="3*,2*" RowDefinitions="1*,1*,10*">
        <Entry
            x:Name="filter"
            Grid.Row="0"
            Grid.Column="0"
            Margin="10"
            Placeholder="Enter Status" />
        <Button
            Grid.Row="0"
            Grid.Column="2"
            Margin="10"
            Command="{Binding FilterByStatus}"
            CommandParameter="{Binding Text, Source={x:Reference filter}}"
            BackgroundColor="White"
            BorderColor="Black"
            BorderWidth="3"
            Text="Filter by Status"
            TextColor="Black" />
    </Grid>
</ContentPage>