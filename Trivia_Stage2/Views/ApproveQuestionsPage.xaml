<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trivia_Stage2.Views.ApproveQuestionsPage"
             xmlns:viewModel="clr-namespace:Trivia_Stage2.ViewModels"
             xmlns:Model="clr-namespace:Trivia_Stage1.Models"
             x:DataType="ViewModels:ApproveQuestionsPageViewModel"
             Title="ApproveQuestionsPage">

    <CollectionView
        Margin="20"
        ItemsSource="{Binding PendingQuestions}"
        SelectedItem="{Binding SelectedPendingQuestion}"
        SelectionChangedCommand="{Binding SelectCommand}"
        SelectionMode="Single">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="models:Question">
                <Grid
                    Padding="10"
                    ColumnDefinitions="Auto,Auto"
                    ColumnSpacing="6"
                    RowDefinitions="Auto,Auto"
                    RowSpacing="6">
                    <Label
                        Grid.Column="1"
                        FontAttributes="Bold"
                        Text="{Binding Id}" />
                    <Label
                        Grid.Row="1"
                        Grid.Column="1"
                        FontAttributes="Italic"
                        Text="{Binding Subject}"
                        VerticalOptions="End" />
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>